[flake8]
max-line-length = 120
exclude =
    __pycache__,
    .git,
    .env,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    data/

# Ignore certain error codes:
# E203: whitespace before ':' (conflicts with black)
# W503: line break before binary operator (conflicts with black)
# E501: line too long (we'll handle these case by case for string literals)
# C901: function too complex (existing code, would require refactoring)
ignore = E203,W503,E501,C901

# Set maximum complexity for functions (informational only due to ignore above)
max-complexity = 15
